#### Ivan's Awesome Brewfile

## Command-line formulas
tap 'caskroom/cask'
tap 'homebrew/bundle'
tap 'homebrew/core'
brew 'cask'
# Zsh formulas
brew 'zsh'
brew 'zsh-completions'
brew 'zsh-syntax-highlighting'
# Update coreutils - the ones in mac are outdated
brew 'coreutils'
brew 'moreutils'
# More formulas
brew 'python3'
brew 'cmake'
brew 'gdal'
brew 'ghostscript'
brew 'htop'
brew 'imagemagick'
brew 'node'
brew 'postgresql'
brew 'screen'
brew 'tesseract'
brew 'tmux'
brew 'tree'
brew 'vim' --with-override-system-vi
brew 'wget'

# Install Cask
# specify a directory to install
cask_args appdir: '/Applications'
tap 'caskroom/homebrew-cask' || true

#Internet navigators
cask 'google-chrome'
cask 'firefox'
cask 'torbrowser'

#Utilities and work
cask 'skype'
cask 'slack'
cask 'dropbox'
cask 'whatsapp'
cask 'licecap'
cask 'adobe-acrobat-reader'

#Development
cask 'iterm2'
cask 'rstudio'
cask 'sublime-text'
cask 'unrarx'
cask 'intel-power-gadget'
cask 'dbeaver-community'
cask 'smcfancontrol'

#Entreteinment
cask 'spotify'
